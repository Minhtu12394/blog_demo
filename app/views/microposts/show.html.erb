<link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">
<div class="container bootstrap snippet">
  <div class="col-sm-12">
    <div class="panel panel-white post panel-shadow">
      <div class="post-heading">
        <div class="pull-left image">
          <%= gravatar_for @micropost.user %>
        </div>
        <div class="pull-left meta">
          <div class="title h5">
            <a href="#"><b><%= @micropost.user.name %></b></a>
            made a post.
          </div>
          <h6 class="text-muted time"><%= time_ago_in_words(@micropost.created_at) + " ago"  %></h6>
        </div>
      </div>

      <div class="post-description">
        <p>
          <%= @micropost.content %>
        </p>

        <div class="stats">
          <a href="#" class="btn btn-default stat-item">
            <i class="fa fa-thumbs-up icon"></i>2
          </a>
          <a href="#" class="btn btn-default stat-item">
            <i class="fa fa-share icon"></i>12
          </a>
        </div>
      </div>

      <div class="post-footer">
        <%= form_for ([@micropost, Comment.new]) do |f| %>
          <div class="input-group">
            <%= f.text_field :content, class: "form-control", placeholder: "Add a comment" %>
            <span class="input-group-addon">
              <a href="#"><i class="fa fa-edit"></i></a>
            </span>
          </div>
        <% end %>

        <ul class="comments-list">
          <% @micropost.comments.each do |comment| %>
            <li class="comment">
              <a class="pull-left" href="#">
                <%= gravatar_for comment.user %>
              </a>
              <div class="comment-body">
                <div class="comment-heading">
                <h4 class="user"><%= comment.user.name %></h4>
                <h5 class="time"><%= time_ago_in_words(comment.created_at) + " ago" %></h5>
                </div>
                <p><%= comment.content %></p>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
